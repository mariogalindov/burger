<div class="container">
    <div class="row justify-content-center" id="titleRow">
        <div class="col-xs-12">
            <h1>Eat da Yummie Burger!</h1>
            <img src="./assets/img/burger-logo" alt="burgerImg" width="30%">

        </div>
    </div>
    <div class="row" id="burgersDisplay">
        <div class="col-xs-6" id="nonDevoured">
            <h2 id="tbdev">Burgers ready to be devoured</h2>
            {{#each data}}
                {{#unless this.devoured}}
                    {{!-- <p>{{this.id}}. {{this.burger_name}}</p>
                    <button class="devourer btn-success" data-id="{{id}}">Devour it!</button> --}}
                    {{> burgers/burger-block dev=true}}
                {{/unless}}
            {{/each}}   
        </div>
        <div class="col-xs-6" id="devoured">
            <h2 id="alreadyDev">Already devoured burgers</h2>
            {{#each data}}
                {{#if this.devoured}}
                    <p>{{this.id}}. {{this.burger_name}}</p>
                {{/if}}
            {{/each}}
        </div>
        
    </div>
    <div class="row" id="formDiv">
        <h2 id="add">Add a Burger</h2>
        
        <form class="create-form">
        <div class="form-group">
            <label for="burguie">Burger Name:</label>
            <input type="text" id="burgui" name="name">
        </div>
        <button class="btn-primary" type="submit">Add Burger</button>
        </form>
    </div>


</div>



